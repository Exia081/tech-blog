{
  "framework": "hugo",
  "buildCommand": "hugo version && hugo --gc --minify --baseURL https://blog-chi-hazel.vercel.app/",
  "outputDirectory": "public",
  "installCommand": "git submodule update --init --recursive",
  "redirects": [
    {
      "source": "/",
      "destination": "/zh/",
      "permanent": false
    },
    {
      "source": "/index.html",
      "destination": "/zh/",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/(.*\\.xml)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/rss+xml; charset=utf-8"
        }
      ]
    },
    {
      "source": "/(.*\\.html)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        }
      ]
    }
  ],
  "env": {
    "HUGO_VERSION": "0.148.2"
  }
}
